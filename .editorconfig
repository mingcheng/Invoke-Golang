# http://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.ps1]
indent_style = space
indent_size = 2
\
[*.psm1]
indent_style = space
indent_size = 2

[Makefile]
indent_style = tab
indent_size = 4

[.travis.yml]
indent_style = space
indent_size = 2

[*.json]
indent_style = space
indent_size = 2
